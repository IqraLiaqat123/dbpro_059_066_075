@model IEnumerable<WebApplication1.Models.Section>

@{
    ViewBag.Title = "listsection";
}

<div class="jumbotron col-lg-offset-2 col-lg-8 text-center">
    <h2>listsection</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class.classname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.classname)
                </td>
                <td>
                    
                                @Html.ActionLink("Get Report", "repo", new { id = item.SectionID }) |

                                @Html.ActionLink("Delete", "deletesection", new { id = item.SectionID })
                            </td>
            </tr>
        }

    </table>
    <div>
        @Html.ActionLink("Back", "class_section")
    </div>
</div>