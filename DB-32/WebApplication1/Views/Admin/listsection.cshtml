@model IEnumerable<WebApplication1.Models.Section>

@{
    ViewBag.Title = "listsection";
}

<h2>listsection</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Class.classname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Class.classname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SectionID }) |
