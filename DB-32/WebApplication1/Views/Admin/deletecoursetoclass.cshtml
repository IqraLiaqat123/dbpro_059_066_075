@model IEnumerable<WebApplication1.Models.ClassCourse>

@{
    ViewBag.Title = "deletecoursetoclass";
}
<div class="jumbotron col-lg-offset-2 col-lg-8 text-center">

    <h2>Delete Course to Class</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class.classname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course.title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Class.classname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.title)
                </td>
                <td>
                    @Html.ActionLink("Delete", "delclasscourse", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <div>
        @Html.ActionLink("Back", "courses")
    </div>
</div>