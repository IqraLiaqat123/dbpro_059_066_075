@model IEnumerable<WebApplication1.Models.Class>

@{
    ViewBag.Title = "listclass";
}
<div class="jumbotron col-lg-offset-2 col-lg-8">
    <div class="text-center"><h2><b>Classes</b></h2></div>


    <p>
        @Html.ActionLink("Create New", "createclass")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.classname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.classname)
                </td>
                <td>
                    @Html.ActionLink("Delete", "deleteclass", new { id = item.classid })
                </td>
            </tr>
        }

    </table>
    <div>
        @Html.ActionLink("Back", "class_section")
    </div>
</div>